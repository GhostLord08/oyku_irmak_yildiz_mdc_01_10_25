#include <stdio.h>
#include <stdlib.h>
float sayi;

int main()
{
    printf("Bir sayi giriniz:");
    scanf("%f",&sayi);
    if (sayi<0)
    {
        printf("sayiniz negatif");
    }
        else if (sayi>0)
        {
            printf("sayiniz pozitif");
        }
            else
            {
                printf("sayiniz 0'a esit");
            }

    return 0;
}
