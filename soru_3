#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
    char harf;
    printf("Bir harf giriniz:");
    scanf("%c", &harf);

    if(harf == 'a' || harf == 'A' || harf == 'E' || harf == 'e' || harf == 'ı' || harf == 'I'|| harf == 'i'|| harf == 'İ'||
        harf == 'o' || harf == 'Ö' || harf == 'O'|| harf == 'ö' harf == 'u' || harf == 'Ü'|| harf == 'U'|| harf == 'Ü')
        {
            printf("harfiniz sesli bir harftir\n");
        }
        else if ((harf >= 'A' && harf <= 'Z') || (harf >= 'a' && harf <= 'z'))
        {
            printf("harfiniz sessiz bir harftir\n");
        }
            else
            {
                printf("gidiniz bir harf degildir!!");
            }

    return 0;

}
